- unless simple
  %td.status
    %span.status{:class => "#{page.status.name.downcase}_status"}
      = page.status.name
    - if page.status_id >= Status[:published].id && page.current && page.current.status_id < Status[:published].id
      %span.status{:class => "#{page.current.status.name.downcase}_status"}
        = " + " + page.current.status.name